rule cp_target:
    input:
        "source/{input}"
    output:
        "destination/{input}"
    params:
        extra = "",
        cold_storage = "../cold_storage.yaml"
    threads: 1
    conda: "../environment.yaml"
    resources:
        mem_mb = (
            lambda wildcards, attempt: min(attempt * 256, 768)
        )
    message:
        "Testing cp"
    log:
        "logs/cp/{input}.logs"
    wrapper:
        "https://bitbucket.org/tdayris/snakemake-wrappers/raw/5c3251a217a76522ff0b2f411a3aa12871f304e5/bio/cp/"
