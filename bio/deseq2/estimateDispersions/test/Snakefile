rule test_estimateDispersions:
    input:
        dds = "esf.RDS"
    output:
        disp = "disp.RDS"
    message:
        "Testing estimateDispersions"
    threads:
        1
    resources:
        mem_mb = (
            lambda wildcards, attempt: min(attempt * 1024, 2048)
