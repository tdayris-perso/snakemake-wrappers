        time_min = (
            lambda wildcards, attempt: min(attempt * 10, 20)
        )
    log:
        "logs/test_estimateDispersions.log"
    params:
        extra = "fitType='local'"
    wrapper:
        "master/bio/deseq2/estimateDispersions"
